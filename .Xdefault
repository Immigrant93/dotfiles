
!-------------------------------------------------------------------------------
! Xft settings
!-------------------------------------------------------------------------------

Xft.dpi:                    96
Xft.antialias:              true
Xft.rgba:                   rgb
Xft.hinting:                true
Xft.hintstyle:              Full

!-------------------------------------------------------------------------------
! URxvt settings
!-------------------------------------------------------------------------------

URxvt.depth:                32
URxvt.geometry:             90x30
URxvt.transparent:          false
URxvt.fading:               0
URxvt.loginShell:           true
URxvt.saveLines:            1000
URxvt.internalBorder:       3
URxvt.lineSpace:            0

! Fonts
URxvt.allow_bold:           false
URxvt*font: xft:Monospace:pixelsize=13
URxvt*boldFont: xft:Monospace:pixelsize=13

! Fix font space
URxvt*letterSpace: -1

! Scrollbar
URxvt.scrollStyle:          rxvt
URxvt.scrollBar:            false

! Perl extensions
URxvt.perl-ext:             default,url-select,clipboard
URxvt.perl-ext-common:      default,matcher
URxvt.matcher.button:       1
URxvt.urlLauncher:          firefox

! Set Copy/Paste
URxvt.keysym.Shift-Control-V:   perl:clipboard:paste
URxvt.keysym.Shift-Control-C:   perl:clipboard:copy

! Disable the stupid ctrl+shift 'feature'
URxvt.iso14755: false
URxvt.iso14755_52: false

! Cursor
URxvt.cursorBlink:          true
URxvt.cursorColor:          #657b83
URxvt.cursorUnderline:      false

! Pointer
URxvt.pointerBlank:         true

! modified tango color scheme
URxvt*background: #262626
URxvt*foreground: #d9e6f2

! black
URxvt*color0: #141414
URxvt*color8: #262626

! red
URxvt*color1: #cf3294
URxvt*color9: #d573b7

! green
URxvt*color2: #81cc47
URxvt*color10: #a5d288

! yellow
URxvt*color3: #cf7f47
URxvt*color11: #d5a288

! blue
URxvt*color4: #357fe2
URxvt*color12: #75a2e7

! magenta
URxvt*color5: #8132e2
URxvt*color13: #a573e7

! cyan
URxvt*color6: #35cc94
URxvt*color14: #75d2b7

! white
URxvt*color7: #dbdbdb
URxvt*color15: #ffffff
